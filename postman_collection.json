        {
          "name": "Get Workflow Status",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/workflow/{{job_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "workflow", "{{job_id}}"]
            },
            "description": "Get the status of a specific job"
          },
          "response": []
        },
        {
          "name": "List All Workflows",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/workflow?limit=50&offset=0",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "workflow"],
              "query": [
                {
                  "key": "limit",
                  "value": "50"
                },
                {
                  "key": "offset",
                  "value": "0"
                },
                {
                  "key": "status",
                  "value": "completed",
                  "disabled": true
                }
              ]
            },
            "description": "Get a paginated list of all workflows"
          },
          "response": []
        },
        {
          "name": "List Completed Workflows",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/workflow?status=completed&limit=20",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "workflow"],
              "query": [
                {
                  "key": "status",
                  "value": "completed"
                },
                {
                  "key": "limit",
                  "value": "20"
                }
              ]
            },
            "description": "Get completed workflows only"
          },
          "response": []
        },
