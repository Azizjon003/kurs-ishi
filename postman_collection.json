          "name": "Download Document",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/workflow/{{job_id}}/download",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "workflow", "{{job_id}}", "download"]
            },
            "description": "Download the generated Word document"
          },
          "response": []
        },
